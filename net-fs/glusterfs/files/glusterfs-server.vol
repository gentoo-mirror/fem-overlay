# file: /etc/glusterfs/glusterfs-server.vol
volume posix
  type storage/posix
  option directory /var/lib/glusterfs/export
end-volume

volume locks
  type features/locks
  option mandatory-locks on
  subvolumes posix
end-volume

volume brick
  type performance/io-threads
  option thread-count 8
  subvolumes locks
end-volume

volume server
  type protocol/server
  option transport-type tcp
  option auth.addr.brick.allow 127.0.0.1
  subvolumes brick
end-volume

